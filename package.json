{
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/ui/*",
        "packages/ui-icons/*",
        "packages/ui-theme/*",
        "packages/docs/*"
    ],
    "description": "通用组件库",
    "author": "osc,baidu",
    "license": "MIT",
    "scripts": {
        "lint": "pnpm workspaces run lint",
        "build": "lerna run --stream --sort build && pnpm --filter @osui/ui build-all",
        "lint:fix": "lerna run lint -- --fix",
        "clean": "lerna run clean",
        "storybook": "start-storybook -p 8777 -s public",
        "version": "lerna version --conventional-commits --no-push",
        "commit": "git-cz",
        "new-component": "sh scripts/new-component.sh",
        "copy-to-docs": "sh scripts/copy-to-docs.sh",
        "publish": "lerna publish from-package",
        "publishWithDocs": "lerna publish from-package && pnpm build-docs",
        "build-docs": "sh scripts/build-docs.sh icloud",
        "test": "lerna exec --no-private --concurrency 10 -- pnpm test",
        "build-check": "node scripts/build-check.js",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@ant-design/compatible": "^5.1.1",
        "@ant-design/tools": "^14.1.0",
        "@babel/core": "^7.18.10",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@ecomfe/stylelint-config": "^1.1.2",
        "@emotion/babel-preset-css-prop": "^11.10.0",
        "@osui/icloud-theme": "^2.1.17",
        "@osui/icons": "^2.1.9",
        "@osui/icons-icloud": "^2.1.9",
        "@reskript/cli": "^2.5.4",
        "@reskript/cli-lint": "^2.5.4",
        "@reskript/config-lint": "^2.5.4",
        "@storybook/cli": "^6.5.10",
        "@types/css": "^0.0.33",
        "@types/less": "^3.0.3",
        "@types/react": "17.0.53",
        "@typescript-eslint/parser": "^6.7.2",
        "commitizen": "^4.2.5",
        "css": "^3.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "enzyme-to-json": "^3.6.2",
        "eslint-plugin-import": "^2.26.0",
        "glob": "^8.0.3",
        "globby": "^13.1.2",
        "husky": "^8.0.1",
        "jest": "^27.5.1",
        "lerna": "^6.4.1",
        "less": "^4.1.3",
        "less-vars-to-js": "^1.3.0",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "mockdate": "^3.0.5",
        "moment": "^2.29.4",
        "require-from-string": "^2.0.2",
        "rimraf": "^3.0.2",
        "styled-components": "~5.3.5",
        "stylelint-config-rational-order": "^0.1.2",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "resolutions": {
        "@types/react": "17.0.53"
    }
}
